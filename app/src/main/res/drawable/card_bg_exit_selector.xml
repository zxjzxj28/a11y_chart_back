<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 聚焦状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg_exit_focused"/>
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/border_exit_focused"/>
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg_normal"/>
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@color/border_normal"/>
        </shape>
    </item>
</selector>
