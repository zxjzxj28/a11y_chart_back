<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="音量按键触发">

        <Preference
            android:selectable="false"
            android:summary="选择最适合自己的按键动作以唤起图表交互，默认采用上下键同时按下的方式，类似 TalkBack 的经典快捷键。" />

        <ListPreference
            android:key="volume_combo_pattern"
            android:title="触发模式"
            android:entries="@array/vol_pattern_entries"
            android:entryValues="@array/vol_pattern_values"
            android:defaultValue="UP+DOWN"
            android:summary="%s" />

        <EditTextPreference
            android:key="volume_combo_window_ms"
            android:title="组合时间窗口（毫秒）"
            android:dialogTitle="输入 100~2000 的毫秒数"
            android:defaultValue="500"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>
