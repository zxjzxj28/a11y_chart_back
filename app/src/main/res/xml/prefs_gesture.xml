<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="手势映射">

        <Preference
            android:selectable="false"
            android:summary="为常用操作分配手势，遵循 TalkBack/VoiceOver 的习惯配置：向下向左关闭，单指双击重复播报，三指滑动自动播报。" />

        <ListPreference
            android:key="gesture_close_action"
            android:title="视图关闭手势"
            android:entries="@array/gesture_close_entries"
            android:entryValues="@array/gesture_close_values"
            android:defaultValue="SWIPE_DOWN_LEFT"
            android:summary="%s" />

        <ListPreference
            android:key="gesture_repeat_action"
            android:title="重复播报手势"
            android:entries="@array/gesture_repeat_entries"
            android:entryValues="@array/gesture_repeat_values"
            android:defaultValue="ONE_FINGER_DOUBLE_TAP"
            android:summary="%s" />

        <ListPreference
            android:key="gesture_auto_broadcast_action"
            android:title="自动播报手势"
            android:entries="@array/gesture_auto_entries"
            android:entryValues="@array/gesture_auto_values"
            android:defaultValue="THREE_FINGER_SWIPE"
            android:summary="%s" />
    </PreferenceCategory>
</PreferenceScreen>
