<resources>
    <style name="PreferenceThemeOverlay.Androidtools" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle.Androidtools</item>
        <item name="preferenceStyle">@style/PreferenceStyle.Androidtools</item>
        <item name="android:listPreferredItemPaddingStart">@dimen/preference_item_padding_start</item>
        <item name="android:listPreferredItemPaddingEnd">@dimen/preference_item_padding_end</item>
    </style>

    <!--
         Text appearance used by all PreferenceCategory titles in the settings
         hierarchy (including the main "图表访问交互相关设置" section and sub-pages
         like "音量按键触发"). Adjust @dimen/text_size_category_title to change
         their font size across the board.
    -->
    <style name="PreferenceCategoryTextAppearance.Androidtools" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_category_title</item>
    </style>

    <style name="PreferenceCategoryStyle.Androidtools" parent="@style/Preference.Category.Material">
        <item name="android:textAppearance">@style/PreferenceCategoryTextAppearance.Androidtools</item>
        <item name="android:paddingStart">@dimen/preference_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/preference_item_padding_end</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="PreferenceStyle.Androidtools" parent="@style/Preference.Material">
        <item name="android:paddingStart">@dimen/preference_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/preference_item_padding_end</item>
        <item name="android:minHeight">56dp</item>
    </style>
</resources>
