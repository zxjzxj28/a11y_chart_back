<!-- app/src/main/res/layout/activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="打开百度（用于验证 Activity 正常）"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvA11yStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="无障碍服务：未知"
        app:layout_constraintTop_toBottomOf="@id/myTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnOpenA11y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去启用无障碍服务"
        app:layout_constraintTop_toBottomOf="@id/tvA11yStatus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnOpenChartPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/open_chart_preview"
        app:layout_constraintTop_toBottomOf="@id/btnOpenA11y"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnShowMockAccessOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/show_mock_access_overlay"
        app:layout_constraintTop_toBottomOf="@id/btnOpenChartPreview"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnTestYOLOv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="测试 YOLOv11 模型"
        app:layout_constraintTop_toBottomOf="@id/btnShowMockAccessOverlay"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
