<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chartPreviewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F5F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/chartPreviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图表无障碍预览"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#1F2937"
            android:textStyle="bold"
            android:contentDescription="图表无障碍预览" />

        <TextView
            android:id="@+id/chartPreviewSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="查看示例图表，并通过朗读和焦点高亮感知每个数据点。"
            android:textColor="#4B5563"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <FrameLayout
                    android:id="@+id/chartFrame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/chartAssistText"
                    app:layout_constraintDimensionRatio="4:3">

                    <ImageView
                        android:id="@+id/chartImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:contentDescription=""
                        android:background="@drawable/chart_card_background" />

                    <com.eagle.android.view.ChartDataOverlay
                        android:id="@+id/chartDataOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="数据点覆盖层" />
                </FrameLayout>

                <TextView
                    android:id="@+id/chartAssistText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="提示：在无障碍模式下滑动可逐一聚焦数据点，双击朗读年份与数值。"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/chartFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chartSummaryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="概要"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chartSummaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#374151"
            android:textSize="14sp"
            android:background="@drawable/chart_card_background"
            android:padding="12dp"
            />

        <TextView
            android:id="@+id/chartDataLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="数据点"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/dataList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btnCloseChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="返回主页"
            android:contentDescription="返回主界面"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
