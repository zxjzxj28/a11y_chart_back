<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chartPreviewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F5F7"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/chartPreviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图表预览"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#1F2937"
        android:textStyle="bold"
        android:contentDescription="图表预览" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/chartImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription=""
            android:background="@drawable/chart_card_background"
            android:padding="12dp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnShowSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="摘要"
        android:contentDescription="查看图表摘要" />

    <Button
        android:id="@+id/btnCloseChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="返回主页"
        android:contentDescription="返回主界面" />

</LinearLayout>
